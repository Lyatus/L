{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/smp/sample_dbg",
            "cwd": "${workspaceFolder}/smp",
            "MIMode": "gdb",
            "preLaunchTask": "build-dbg",
            "visualizerFile": "${workspaceFolder}/src/L.natvis",
            "showDisplayString": true,
        },
        {
            "name": "(gdb) Development",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/smp/sample_dev",
            "cwd": "${workspaceFolder}/smp",
            "MIMode": "gdb",
            "preLaunchTask": "build-dev",
            "visualizerFile": "${workspaceFolder}/src/L.natvis",
        },
        {
            "name": "(gdb) Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/smp/sample",
            "cwd": "${workspaceFolder}/smp",
            "MIMode": "gdb",
            "preLaunchTask": "build-rls",
            "visualizerFile": "${workspaceFolder}/src/L.natvis",
        }
    ]
}
